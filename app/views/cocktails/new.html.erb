<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h3 class="mt-3">Add your own cocktail: </h3>
      <%= simple_form_for @cocktail do |f|%>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.submit "Add Cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
